<h1><%= @user.full_name %></h1>
<hr />

<h2>Courses Enrolled In:</h2>
<h5><%= @user.courses.length <= 0 ? "Not currently enrolled in any courses" : nil %></h5>
<ul>
    <% @user.courses.each do |course| %>
        <li>
            <%= link_to course.name, course %>
        </li>
    <% end %>
</ul>
<br />
<br />
<br />
<%= link_to 'Delete User', @user, method: :delete, class: "ui red button inverted" %>
